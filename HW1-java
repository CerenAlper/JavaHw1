import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        int mat, fizik, kimya, turkce, tarih, muzik;
        Scanner inp = new Scanner(System.in);

        System.out.println("Mat notun:");
        mat= inp.nextInt();
        System.out.println(mat);

        System.out.println("fizik notun:");
        fizik= inp.nextInt();
        System.out.println(fizik);

        System.out.println("kimya notun:");
        kimya= inp.nextInt();
        System.out.println(kimya);

        System.out.println("türkçe notun:");
        turkce= inp.nextInt();
        System.out.println(turkce);

        System.out.println("tarih notun:");
        tarih= inp.nextInt();
        System.out.println(tarih);


        System.out.println("müzik notun:");
        muzik= inp.nextInt();
        System.out.println(muzik);

        int toplam = (mat+fizik+kimya+turkce+tarih+muzik);
        double sonuc=toplam/6;

        System.out.println(sonuc);


    }

}
